{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "ES2022",
    "lib": ["es6", "dom"],
    "types": ["node", "jest"],
    "paths": {
      "@src/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@shared/*": ["src/shared/*"],
      "@tests/*": ["src/__tests__/*"]
    },
    "typeRoots": ["src/utils", "./node_modules/@types"],
    "pretty": false,
    "sourceMap": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true
  }
}
